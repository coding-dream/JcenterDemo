<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_line_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:background="#fcc"
        android:id="@+id/layout_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </LinearLayout>

    <LinearLayout
        android:background="#f00"
        android:id="@+id/layout_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@id/v_line_guide"
        app:layout_constraintRight_toRightOf="@id/v_line_guide"
        app:layout_constraintTop_toTopOf="@id/v_line_guide"
        app:layout_constraintBottom_toBottomOf="@id/v_line_guide"
        android:visibility="gone"
        >
    </LinearLayout>

    <LinearLayout
        android:background="#0cc"
        android:id="@+id/layout_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@id/v_line_guide"
        app:layout_constraintRight_toRightOf="@id/v_line_guide"
        app:layout_constraintTop_toTopOf="@id/v_line_guide"
        app:layout_constraintBottom_toBottomOf="@id/v_line_guide"
        android:visibility="gone"
        >

    </LinearLayout>

</android.support.constraint.ConstraintLayout>