<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--底部弹出型对话框动画-->
    <style name="dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nn_dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/nn_dialog_push_out</item>
    </style>

    <!--侧边弹出型 right-left 对话框动画-->
    <style name="dialogR2LAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nn_dialog_r2l_in</item>
        <item name="android:windowExitAnimation">@anim/nn_dialog_r2l_out</item>
    </style>

    <!--中部弹出型对话框动画-->
    <style name="dialogDuangAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nn_dialog_duang_in</item>
        <item name="android:windowExitAnimation">@anim/nn_dialog_duang_out</item>
    </style>

    <!-- transparent dialog -->
    <style name="ZZTransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- shadow dialog -->
    <style name="ZZShadowDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>